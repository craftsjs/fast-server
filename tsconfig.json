{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "moduleDetection": "force",
    "noEmit": false,
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "allowJs": false,
    "sourceMap": false,
    "types": [
      "bun-types"
    ],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@craftsjs/fast-server": ["./package/fast-server"],
      "@craftsjs/platform-fast-server": ["./package/platform-fast-server"]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts", "dist", "**/test"]
}
